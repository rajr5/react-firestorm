{
  "name": "react-firestorm",
  "version": "0.2.1",
  "description": "A Firebase FireStore ORM for React",
  "main": "dist/index.js",
  "repository": "https://github.com/joshgachnang/FireStorm.git",
  "author": "Josh Gachnang <josh@nang.io>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "run-tests": "ts-mocha src/*.test.ts*",
    "test": "yarn lint",
    "deploy": "yarn build && npm publish"
  },
  "dependencies": {
    "@firebase/app": "^0.6.5",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/lodash": "^4.14.162",
    "axios": "^0.19.2",
    "firebase": "^7.15.1",
    "hoist-non-react-statics": "^3.3.0",
    "lodash": "^4.17.20",
    "react": "^16.11.0"
  },
  "devDependencies": {
    "@firebase/firestore-types": "^1.11.0",
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.11",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "10.1.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^8.2.0",
    "prettier": "^1.19.1",
    "sinon": "^9.2.0",
    "ts-mocha": "^8.0.0",
    "tslint": "5.10.0",
    "typescript": "^3.9.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "printWidth": 100,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "useTabs": false
  }
}
